<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="100dp"
                                             android:background="@drawable/card_background"
                                             android:orientation="horizontal">

    <ImageView
        android:id="@+id/event_card_imageview"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1"/>

    <TextView
        android:id="@+id/event_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/event_card_info"
        app:layout_constraintLeft_toLeftOf="@+id/event_card_info"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64"/>

    <TextView
        android:id="@+id/event_card_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:maxLines="2"
        android:text="Info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/event_card_imageview"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"/>

    <TextView
        android:id="@+id/event_card_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/event_card_info"
        app:layout_constraintTop_toBottomOf="@+id/event_card_info"/>

</android.support.constraint.ConstraintLayout>