    <Spinner
        android:id="@+id/activity_select_seat_category_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.0">
    </Spinner>

    <TextView
        android:id="@+id/activity_select_seat_category_details_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        android:minLines="3"
        app:layout_constraintTop_toBottomOf="@+id/activity_select_seat_category_spinner"/>

    <EditText
        android:hint="Select Seat"
        android:id="@+id/activity_select_seat_seatno_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_select_seat_category_details_edittext"/>
    
    <Button
        android:id="@+id/activity_select_seat_buyticket_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Buy Ticket"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_select_seat_seatno_edittext"/>


</android.support.constraint.ConstraintLayout>
